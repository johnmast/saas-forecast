<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @weather_grid.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @weather_grid.user.email %>
</p>

<%= link_to 'Edit', edit_weather_grid_path(@weather_grid) %> |
<%= link_to 'Back', weather_grids_path %>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @weather_grid.name %></h3>
    </div>
    <% weather_locations.each do |weather_location| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= weather_location.city %>
          [<%= weather_location.latitude %>, <%= weather_location.longitude %>]
        </div>
      </div>
    <% end %>
  </div>
</div>