<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @weather_grid.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @weather_grid.user.email %>
</p>

<%= link_to 'Edit', edit_weather_grid_path(@weather_grid) %> |
<%= link_to 'Back', weather_grids_path %>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @weather_grid.name %></h3>
    </div>
    <% @weather_info.each do |weather_info| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= weather_info['location'].city %>
          [<%= weather_info['location'].latitude %>, 
          <%= weather_info['location'].longitude %>]
        </div>
        City: <%= weather_info['weather'].city %>
        Summary: <%= weather_info['weather'].currently.summary %>
        Timezone: <%= weather_info['weather'].timezone %>
      </div>
    <% end %>
  </div>
</div>